{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gemini.report@1",
  "title": "Gemini Status-Report v1",
  "type": "object",
  "required": ["schema", "workorder_id", "round", "phase", "status"],
  "properties": {
    "schema":       { "const": "gemini.report@1" },
    "workorder_id": { "$ref": "gemini.workorder@1#/properties/id" },
    "round":        { "type": "integer", "minimum": 1 },
    "phase":        { "type": "string" },
    "status":       { "type": "string", "enum": ["success", "in_progress", "blocked"] },
    "summary":      { "type": "string" },
    "action_items": {
      "type": "array",
      "items": { "type": "string" }
    },
    "artifacts": {
      "type": "array",
      "items": { "type": "string", "format": "uri" }
    },
    "generated_by": { "type": "string" },
    "timestamp":    { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}