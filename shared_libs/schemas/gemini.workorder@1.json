{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gemini.workorder@1",
  "title": "Gemini Work-Order v1",
  "type": "object",
  "required": ["schema", "id", "objective", "tasks"],
  "properties": {
    "schema":  { "const": "gemini.workorder@1" },
    "id":      { "type": "string", "pattern": "^wo-[0-9]{8}-[0-9]{3}$" },
    "objective": { "type": "string", "minLength": 1 },
    "constraints": {
      "type": "object",
      "properties": {
        "deadline":   { "type": "string", "format": "date-time" },
        "language":   { "type": "array", "items": { "type": "string" } },
        "sla":        { "type": "string", "enum": ["gold", "silver", "bronze"] }
      },
      "additionalProperties": true
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["phase", "acceptance"],
        "properties": {
          "phase":      { "type": "string" },
          "acceptance": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "notifiers": {
      "type": "array",
      "items": { "type": "string", "pattern": "^(slack|email):" }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_by": { "type": "string" },
        "repo":       { "type": "string" },
        "branch":     { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}